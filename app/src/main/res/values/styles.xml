<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyLetterButton" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/letterbuttontextcolor</item>
        <item name="android:background">@drawable/letter_button</item>
    </style>

    <style name="MyClueButton" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/cluebuttontextcolor</item>
        <item name="android:background">@drawable/clue_button</item>
    </style>
</resources>
